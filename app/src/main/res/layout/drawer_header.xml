<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_height"
    android:background="@color/teal_200"
    android:gravity="center|start"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/drawer_header"
        android:src="@drawable/ic_notes_notebook"
        android:layout_marginStart="@dimen/note_big_margin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_header"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginTop="@dimen/note_big_margin"
        android:layout_marginStart="@dimen/note_big_margin"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/note_big_margin"
        />

</LinearLayout>